<%= link_to 'Back', users_path %>
<%= link_to 'Delete User', user_path, method: :delete, data: { confirm: 'Are you sure? All user photos will be deleted as well.' } %></td>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name</strong>
  <%= @user.name %>
</p>
<p>
  <strong>E-mail</strong>
  <%= @user.email %>
</p>
<p>
  <strong>Password</strong>
  <%= @user.password %>
</p>

<h3>Images</h3>

<%= link_to 'Load image', new_user_image_path(@user.id) %>

<p>
  <%= @images.each do |i| %>
      <%= image_tag i.image unless @user.image.blank? %>
  <% end %>
</p>